@using OSBIDE.Library.Models
@using OSBIDE.Library.Events
@using OSBIDE.Web.Models
@using System.IO
@model OSBIDE.Web.Models.AggregateFeedItem
@{
    AskForHelpEvent help = Model.Items.First().Event as AskForHelpEvent;
    string code = HttpUtility.HtmlEncode(help.Code);
    code = code.Replace("\t", "&nbsp;&nbsp;&nbsp;");
    
    //TODO: Add "download code" button
} 
@help.UserComment
<pre><code class="cpp">@Html.Raw(code)</code></pre>