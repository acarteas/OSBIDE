<Application x:Class="OSBIDE.Analytics.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:cm="clr-namespace:System.ComponentModel;assembly=PresentationFramework"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="{x:Type UserControl}">
            <Style.Triggers>
                <Trigger Property="cm:DesignerProperties.IsInDesignMode"
                             Value="True">
                    <Setter Property="Background"
                                Value="{x:Static SystemColors.WindowBrush}" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Application.Resources>
    
    
</Application>
